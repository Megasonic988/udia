<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="ui warning message">
      <div class="header">Oops, something went wrong!</div>
      <p>Please check the errors below.</p>
    </div>
  <% end %>
  <div class="ui form">
    <div class="field">
      <%= label f, :name %>
      <%= text_input f, :name %>
      <%= error_tag f, :name %>
    </div>

    <%= submit "Submit", class: "ui button basic" %>
  </div>
<% end %>
